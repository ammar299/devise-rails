<% if @task.errors.any? %>
 <h2>The following errors prevented the task from saving:</h2>
 <ul>
 <% @task.errors.full_messages.each do |msg|%>
 <li><%= msg %></li>
 <% end %>
 </ul>
<% end %>
<%= form_for @task do |f| %>
	<%= form_for @project do |f| %>
		<p>
		 	<%= f.label :name %><br>
		 	<%= f.text_field :name %>
		<p>
		<p>
		 	<%= f.label :duration %><br>
		 	<%= f.text_field :duration %>
		</p>
		<p>
		 	<%= f.label :status %><br>
		  <%= f.text_field :status %>
		</p>
	  	<%= f.submit %>
	  </p>
	<%end%>
<% end %>