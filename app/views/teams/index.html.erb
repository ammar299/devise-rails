<h1>You can Join the Following Team</h1>
<table style="width:80%; margin-left: 20px;">
 
</table>




<table id="customers">
  <tr>
  <th>Title</th>
  <th>Action</th>
</tr>
<% @teams.each do |team| %>
  <tr>
    <td><%= team.title %></td>
    <% if team.memberships.size == 4 %>
      <td><button class="button button2 disabled">Team full</button></td>
    <% else %>
      <td>
        <% if is_team_admin?(team, current_user) %>
          <button class="button button1">You are team admin</button>
        <% else %>
          <%= form_for Membership.new, :url => {:action => "join_team", params: {team_id: team.id}} do |f| %>
            <%= f.button 'Join Team'%>
          <% end %>
        <% end %>
    <% end %>
  </tr>
<% end %>
</table>