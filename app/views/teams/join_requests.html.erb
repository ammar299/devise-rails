<h1>You have Joined Request </h1>

<table id="customers">
  <tr>
		<th>ID</th>
		<th>Team</th>
		<th>Role</th>
		<th>Action</th>
	</tr>
	<% @teams.each do |team| %>
	<% unless team.memberships.where(is_approved: false).blank? %>
	<% team.memberships.where(is_approved: false).each do |membership| %>
	<tr>
		<td><%= membership.team.id %></td>
		<td><%= team.title.blank? ? "N/A" : team.title%></td>
		<td><%= membership.role %></td>
		<td>
		
		<button class="button button1"><%= link_to "Accept Request", approve_join_request_teams_path(team, membership_id: membership.id) , :method => :post %></button>
			
			<button class="button button3"><%= link_to "Decline Request", decline_join_request_teams_path(team, membership_id: membership.id) , :method => :delete %></button>
			

		</td>
		</tr>

		<% end %>

		<% else %>
				<p>No member request to join your team</p>
		<% end %>

		<%end%>

</table>
