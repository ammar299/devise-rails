<div class="container">
  <div class="row">
     <div class="col-md-4 mx-auto">
        <div class="myform form ">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>  
          <%= render "devise/shared/error_messages", resource: resource %>             
              <div class="form-group">
                 <%=f.text_field :name, class: "form-control my-input", placeholder: "Name"%>
              </div>
              <div class="form-group">
                 <%=f.email_field :email, class: "form-control my-input", placeholder: "Email"%>
              </div>
              <div class="form-group">
                 <%=f.password_field :password, class: "form-control my-input", placeholder:"Password"%>
              </div>
               <div class="form-group">
                 <%=f.password_field :password_confirmation, class: "form-control my-input", placeholder: " Retype -Password"%>
              </div>

              <%# f.fields_for :resource do |build| %>
              <div class="form-group">
              <%#= build.label :country %>
              <%=f.text_field :country, class: "form-control my-input", placeholder: "country"%>
              </div>
              <div class="form-group">
                <%#= build.label :city %>
                <%=f.text_field :city, class: "form-control my-input", placeholder: "city"%>
              </div>
              <%# end %>
                <%= f.file_field :avatar %>
              <div class="text-center ">
                <%=f.submit "Sign Up" , class: " btn btn-block send-button tx-tfm"%>
              </div>
            </form>
          <% end %>
        </div>
     </div>
  </div>
</div>

<%= render "devise/shared/links" %>
