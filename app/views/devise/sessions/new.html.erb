<div class="container">
  <div class="row">
     <div class="col-md-4 mx-auto">
        <div class="myform form ">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%=f.email_field :email, class: "form-control my-input", placeholder: "Email"%>
            </div>

            <div class="form-group">
              <%=f.password_field :password, class: "form-control my-input", placeholder:"Password"%>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="text-center ">
              <%=f.submit "Sign In" , class: " btn btn-block send-button tx-tfm"%>
            </div>
            </form>
          <% end %>
        </div>
     </div>
  </div>
</div>

<%= render "devise/shared/links" %>
